@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers
@model NewSpotify.Models.Models.ViewModels.IndexVm

@{
    ViewData["Title"] = "Start";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    await Html.RenderPartialAsync("~/Views/Shared/_SelectedSongsPartial.cshtml");

}

<div class="container justify-content-center">
    <h1>Select a category that you like</h1>
    <div class="row mt-4">
        @foreach (var category in Model.Categories)
        {
            <div class="col-lg-3 col-md-4 col-sm-6 portfolio-item mb-4">
                <div class="card h-100">
                    <img class="card-img-top" src="@category.ImageUrl" alt="Card image">
                    <div class="card-body">
                        <a asp-controller="Search"
                           asp-action="PlayLists"
                           asp-route-id="@category.Id">
                            @category.Name
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>



@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers
@model NewSpotify.Web.Models.Spotify.SpotifyRecomendationsresponse

@{
    ViewData["Title"] = "Suggestions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="mt-4 mb-4">
    <div class="container">
        <h1>Here are some recommendations for you</h1>
    </div>
</div>
<div class="container">
    <table class="table table-striped">
        <tr>
            <th>
                Song
            </th>
            <th>
                Band
            </th>
            <th>
                Album
            </th>
            <th>
                Rating
            </th>
        </tr>

        @foreach (var track in Model.Tracks)
        {
            <tr>
                <td>
                    <img src="@track.Album.Images.FirstOrDefault()?.Url" class="img-responsive voc_list_preview_img" height="35" width="35" alt="" />    @track.Name
                </td>
                <td>
                    @track.Artists[0].Name
                </td>
                <td>
                    @track.Album.Name
                </td>
                <td>
                    @track.Popularity
                </td>
            </tr>
        }
    </table>
</div>

